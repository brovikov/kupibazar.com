<div class = flickr_pagination >
          <%= will_paginate payment_pr, param_name: page_param , container: false %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Фото</th>
      <th>Дата</th>
      <th>Название</th>
      <th>Сумма</th>
      <th>Комментарий</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% payment_pr.each do |item| %>
      <tr>
        <td><%= link_to item.id, payment_path(item) %></td>
         <td>
                <a class="pull-left" href="#">
                <%= link_to image_tag(item.img, size: "50x50"), item.link  %>
                </a>
               <div style="width:100px;">
                 <small>
                   Размер: <%= item.size %> <br/>
                   Цвет: <%= item.color %> 
                 </small>
              
               </div>
               </td> 
              <td><%= l item.created_at, format: :short %></td>
              <td width = '30%'><%= link_to item.name, item.link %></td>
        <td>
                <strong>$<%= item.value %></strong><br/>
                <small><%= price(item.value, 'rub', item.count)[:str] %></small> <br/>
                <span class='total_price'><%= price(item.value, 'rub', item.count)[:val] %> руб РФ</span> <br/>
        </td>
        <td><%=item.comment%></td>
        <td>
          <% if item.status < 1 %>
            <%= link_to 'Изменить', edit_item_path(item), :class => 'btn btn-mini' %>
            <%= link_to 'Удалить', admin_item_path(item), :method => :delete, :confirm => 'Вы уверены?', :class => 'btn btn-mini btn-danger' %>
            <%= link_to 'Принять', status_admin_item_path(item), :class => 'btn btn-mini' %>
          <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class = flickr_pagination >
          <%= will_paginate payment_pr, param_name: page_param , container: false %>
</div>

