<h1>Пополнения баланса</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Статус</th>
      <th>Дата</th>
      <th>Время</th>
      <th>Сумма, руб. РФ</th>
      <th>Комментарий</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @payment.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><% if payment.status == 0 %>
              <span class="label label-warning">На согласовании</span>
            <% end %> 
        </td>
        <td><%= l payment.data, format: :dt %></td>
        <td><%= l payment.time, format: :tm %></td>
        <td><%= payment.value %></td>
        <td width = '40%'><%= payment.comment %></td>
        <td>
          <%= link_to 'Изменить', edit_payment_path(payment), :class => 'btn btn-mini' %>
          <%= link_to 'Удалить', payment_path(payment), :method => :delete, :confirm => 'Вы уверены?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_product_path, :class => 'btn btn-primary' %>